\mode<presentation>

\setbeamertemplate{navigation symbols}{}

\newcommand{\collaborators}[1]{\gdef\@collaborators{#1}}

% title page

\defbeamertemplate*{title page}{simplebeamer}[1][]
{
	\vbox{}
	{\hfill \usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\par}
	\vfill
	\begingroup
	\centering
	\vskip0.75em%
	\begin{beamercolorbox}[wd=\hsize, center]{titlebg}
		\begin{beamercolorbox}[sep=8pt, center]{title}
			\usebeamerfont{title}\inserttitle\par%
			\ifx\insertsubtitle\@empty%
			\else%
				\vskip0.25em%
				{\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
			\fi%     
		\end{beamercolorbox}%
		\vskip0.75em\par
		\begin{beamercolorbox}[sep=8pt,center]{author}
			\usebeamerfont{author}\insertauthor
		\end{beamercolorbox}
		\begin{beamercolorbox}[sep=8pt,center]{author}
			\usebeamerfont{author}\insertinstitute
		\end{beamercolorbox}
		\begin{beamercolorbox}[sep=8pt,center]{date}
			\usebeamerfont{date}\insertdate
		\end{beamercolorbox}
		\begin{figure}
			\vskip-1.75em
			\@collaborators
		\end{figure}
	\end{beamercolorbox}
	\endgroup
}

\defbeamertemplate*{frametitle}{simplebeamer}[1][]
{\insertframetitle\strut%
	\vskip0\baselineskip%
	\leaders\vrule width \textwidth\vskip0.4pt%
	\vskip0pt%
	\nointerlineskip}


\setbeamertemplate{itemize item}{$\bullet$}
\setbeamertemplate{footline}[text line]{%
	\hspace{\textwidth} \hspace{1.2em} \strut{%
		\normalsize\sf\color{black!60}%
		\sfrac{\insertframenumber}{55}
	}%
	% \hfill%
}

